		"karma-mocha-reporter": "^2.1.0",
		"karma-phantomjs-launcher": "^0.2.0",
		"karma-sourcemap-loader": "^0.3.5",
		"lite-server": "^2.2.2",
		"mocha": "^3.0.2",
		"phantomjs": "^1.9.17",
