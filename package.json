		"babel-register": "^6.14.0",
		"chai": "^3.5.0",
		"jasmine": "^2.3.1",
		"jasmine-core": "^2.3.4",
		"jspm": "^0.16.13",
		"karma": "^0.13.14",
		"karma-babel-preprocessor": "^6.0.1",
		"karma-chrome-launcher": "^1.0.1",
